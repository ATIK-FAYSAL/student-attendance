<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/images"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"></include>
    <Spinner
        android:id="@+id/section"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:background="@drawable/round_button"
        android:layout_above="@+id/batch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <Spinner
        android:id="@+id/batch"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/round_button"
        android:layout_above="@+id/see"
        android:layout_alignLeft="@+id/section"
        android:layout_alignStart="@+id/section" />

    <Button
        android:id="@+id/see"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:onClick="show_list"
        android:text="SEE STUDENT"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/batch"
        android:layout_alignStart="@+id/batch" />
</RelativeLayout>

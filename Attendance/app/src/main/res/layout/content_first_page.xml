<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.atik_faysal.attendance.first_page"
    tools:showIn="@layout/app_bar_first_page">

    <Button
        android:id="@+id/search"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:onClick="student"
        android:text="SEARCH"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/txt_enter_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/txt_enter_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:hint="   Enter student id"
        android:inputType="textPersonName"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/stud"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
</RelativeLayout>
